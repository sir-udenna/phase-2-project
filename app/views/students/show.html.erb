<h1><%=@student.name%> of House <%=@student.house.name%>'s Timetable</h1>

<hr

</h1><%=@student.name%>'s Timetable <%=Time.now%><h1>
<hr>

<%@student.lessons.each do |l|%>
    <li><%=l.lesson_name%> lesson at <%=l.location%> - <%=l.time%>pm</li>
    <%end%>

<hr>

</h1><%=@student.name%>'s Semester Report Card<h1>
<hr>

<table>
  <thead>
    <tr>
      <th>Grade</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%@student.grades.each do |g|%>
    <tr>
    <td><%=g.grade_achievement%></td>
    </tr>
  <% end %>
<tbody>
<%@student.lessons.each do |l|%>
  <tr>
  <td><%=l.lesson_name%></td>
  </tr>
<% end %>
</tbody>
</table>

<%=button_to 'log out', '/logout', method: :delete%>

