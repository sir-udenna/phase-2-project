<h1>Student Home Page</h1>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <%@students.each do |s|%>
      <tr>
        <td><%= s.name %></td>
        <td><%= link_to 'Show', s %></td>
        <td><%= link_to 'Edit', edit_student_path(s) %></td>
        <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>







