<h1>All Lessons held today</h1>

<br>

<table>
  <thead>
    <tr>
      <th>Lesson_name</th>
      <th>Location</th>
      <th>Time</th>
      <th>Professor</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <%@lessons.each do |l|%>
      <tr>
        <td><%= l.lesson_name %></td>
        <td><%= l.location %></td>
        <td><%= l.time %>pm</td>
        <td><%= l.professor.name %></td>
        <td><%= l.professor.subject %></td>
        <td><%= link_to 'Show', l %></td>
        <td><%= link_to 'Edit', edit_lesson_path(l) %></td>
        <td><%= link_to 'Destroy', l, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
